<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/shape_card"
    android:clipToOutline="true"
    android:layout_marginBottom="24dp">
    <ImageView
        android:id="@+id/speakerImage"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:background="@color/zinc_200"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/speakerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ThePrimeagen"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/zinc_800"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"
                android:lineSpacingMultiplier="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/badge_speaker"
                android:textSize="11sp"
                android:background="@drawable/shape_badge"
                android:textColor="@color/primary_500"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/lectureName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Roundtable:  'The future of modern applications'"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/zinc_600"
            android:textSize="14sp"
            android:maxLines="2" />
        <TextView
            android:id="@+id/lectureInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="11h â€¢ Palco Production â€¢ ðŸ‡§ðŸ‡·"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/zinc_900"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>